<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/red_all"
        android:orientation="vertical">
    
    <LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical">
	    <TextView 
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="10dp"
    		android:text="@string/notice_title"
    		android:textColor="@color/white_five"
    		android:textSize="16sp"
    		android:gravity="center_vertical"
	        android:drawableLeft="@drawable/notice_pic"
	        android:drawablePadding="5dp"/>
	</LinearLayout>  
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
		<TextView 
		    android:id="@+id/msgText"
		    android:layout_width="match_parent"
    		android:layout_height="90dp"
    		android:gravity="center"
    		android:text="@string/notice_title"
    		android:textColor="@color/colorWhite"
    		android:textSize="14sp"
		    />
		<RelativeLayout 
		    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center">
		    <Button 
		        android:id="@+id/confirmBtn"
		        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:background="@drawable/tuikuan"
	    		android:text="@string/notice_title"
	    		android:textColor="@color/white_six"
	    		android:textSize="14sp"
		        />
		    <Button 
		        android:id="@+id/cancelBtn"
		        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_marginLeft="120dp"
	    		android:background="@drawable/tuikuan"
	    		android:text="@string/notice_title"
	    		android:textColor="@color/white_six"
	    		android:textSize="14sp"
		        />
		</RelativeLayout>
	</LinearLayout>
	</LinearLayout>
</LinearLayout>